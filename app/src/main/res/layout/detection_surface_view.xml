<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <org.opencv.android.JavaCameraView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/detection_activity_surface_view"/>

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/seekBars"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detection_activity_surface_view"
        android:layout_toEndOf="@+id/detection_activity_surface_view">

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarHMin"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="H_Min"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center" />

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarHMax"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="H_Max"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="1"
                android:textAlignment="center" />

            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarSMin"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="S_Min"
                android:id="@+id/textView3"
                android:layout_row="2"
                android:layout_column="1"
                android:textAlignment="center" />
            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarSMax"
                android:layout_row="3"
                android:layout_column="0" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="S_Max"
                android:id="@+id/textView4"
                android:layout_row="3"
                android:layout_column="1"
                android:textAlignment="center" />
            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarVMin"
                android:layout_row="4"
                android:layout_column="0"
                android:focusableInTouchMode="true" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="V_Min"
                android:id="@+id/textView5"
                android:layout_row="4"
                android:layout_column="1"
                android:textAlignment="center" />
            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/seekBarVMax"
                android:layout_row="5"
                android:layout_column="0"
                android:focusableInTouchMode="true" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="V_Max"
                android:id="@+id/textView6"
                android:layout_row="5"
                android:layout_column="1"
                android:textAlignment="center" />


        </GridLayout>
    <GridLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/seekBars"
        android:layout_toRightOf="@+id/detection_activity_surface_view"
        android:layout_toEndOf="@+id/detection_activity_surface_view">
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorModel"
            android:textOff="RGB"
            android:textOn="HSV"
            android:layout_row="0"
            android:layout_column="0"
            android:checked="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morph"
            android:id="@+id/switchMorph"
            android:layout_row="1"
            android:layout_column="0"
            android:checked="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROI"
            android:id="@+id/switchRoi"
            android:layout_row="1"
            android:layout_column="1"
            android:checked="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track"
            android:id="@+id/switchTrack"
            android:layout_row="2"
            android:layout_column="0"
            android:checked="false" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Lane"
            android:textOff="Sign"
            android:id="@+id/objType"
            android:layout_row="0"
            android:layout_column="1"
            android:checked="true" />

    </GridLayout>
</RelativeLayout>
